{
   "kind":"ReplicationController",
   "apiVersion":"v1",
   "metadata":{
      "name":"greenapp",
      "labels":{
         "app":"greenapp"
      }
   },
   "spec":{
      "replicas":1,
      "selector":{
         "app":"greenapp"
      },
      "template":{
         "metadata":{
            "labels":{
               "app":"greenapp"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"greenapp",
                  "image":"trangocquy123/quytn7-capstone2",
                  "ports":[
                     {
                        "name":"http-server",
                        "containerPort":80
                     }
                  ]
               }
            ]
         }
      }
   }
}